<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.esa.snap</groupId>
        <artifactId>snap</artifactId>
        <version>0.5-SNAPSHOT</version>
    </parent>

    <packaging>jar</packaging>

    <groupId>org.esa.snap</groupId>
    <artifactId>snap-bootstrap</artifactId>
    <name>SNAP Bootstrap Classpath</name>
    <description>Provides the bootstrap classpath to launch SNAP from your favourite IDE.</description>
    <version>0.5-SNAPSHOT</version>

    <dependencies>
        <dependency>
            <groupId>org.esa.beam</groupId>
            <artifactId>beam-bootstrap</artifactId>
            <version>${beam.versionRange}</version>
        </dependency>
        <dependency>
            <groupId>com.alee</groupId>
            <artifactId>weblaf</artifactId>
            <version>1.27</version>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>s1tbx</id>
            <dependencies>
                <dependency>
                    <groupId>org.esa.nest</groupId>
                    <artifactId>nest-bootstrap</artifactId>
                    <version>${nest.version}</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>s2tbx</id>
            <dependencies>
                <dependency>
                    <groupId>org.esa.s2tbx</groupId>
                    <artifactId>s2tbx-bootstrap</artifactId>
                    <version>${s2tbx.version}</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>s3tbx</id>
            <dependencies>
                <dependency>
                    <groupId>org.esa.s3tbx</groupId>
                    <artifactId>s3tbx-bootstrap</artifactId>
                    <version>${s3tbx.version}</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>all</id>
            <dependencies>
                <dependency>
                    <groupId>org.esa.nest</groupId>
                    <artifactId>nest-bootstrap</artifactId>
                    <version>${nest.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.esa.s2tbx</groupId>
                    <artifactId>s2tbx-bootstrap</artifactId>
                    <version>${s2tbx.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.esa.s3tbx</groupId>
                    <artifactId>s3tbx-bootstrap</artifactId>
                    <version>${s3tbx.version}</version>
                </dependency>
            </dependencies>
        </profile>
    </profiles>
</project>
