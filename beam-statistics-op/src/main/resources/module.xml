<module>
    <manifestVersion>1.0.0</manifestVersion>

    <symbolicName>beam-statistics</symbolicName>
    <version>1.0</version>
    <name>BEAM statistics operator</name>
    <funding>EU</funding>

    <description>
        <![CDATA[
            The beam-statistics module contains an operator for computing statistics for a set of input products and
            regions.
        ]]>
    </description>

    <vendor>Brockmann Consult GmbH</vendor>
    <contactAddress>Max Planck Str.2, 21502 Geesthacht (Germany)</contactAddress>
    <copyright>(C) 2012 by Brockmann Consult GmbH</copyright>
    <url>http://envisat.esa.int/beam</url>
    <licenseUrl>http://www.gnu.org/licenses/gpl.html</licenseUrl>

    <categories>Application,Processor,Geometry,VISAT,Level-3,Envisat,MERIS,AATSR,AVHRR,CHRIS</categories>

    <dependency>
        <module>beam-visat-rcp</module>
    </dependency>

    <extension point="ceres-core:serviceProviders">
        <serviceProvider>org.esa.beam.statistics.calculators.StatisticsCalculator</serviceProvider>
    </extension>

    <extension point="beam-ui:actions">
        <action>
            <id>statistics</id>
            <text>Statistics operator</text>
            <class>org.esa.beam.statistics.ui.StatisticsOpAction</class>
            <placeAfter>Binning</placeAfter>
            <operatorName>Statistics</operatorName>
        </action>
    </extension>

