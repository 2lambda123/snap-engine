<module>
    <manifestVersion>1.0.0</manifestVersion>
    <symbolicName>snap-app</symbolicName>
    <version>0.5-SNAPSHOT</version>
    <name>SNAP Application</name>

    <description>Sentinel Toolbox Display and Analysis Tool</description>

    <licenseUrl>http://www.gnu.org/licenses/gpl.html</licenseUrl>
    <funding>European Space Agency</funding>

    <dependency>
        <module>snap-visat-rcp</module>
    </dependency>
    <dependency>
        <module>snap-core</module>
    </dependency>

    <categories>Application</categories>

    <extension point="ceres-core:applications">
        <application id="SNAPMain" class="org.esa.snap.SNAPMain"/>
    </extension>

    <extension point="snap-ui:applicationDescriptors">
        <applicationDescriptor>
            <applicationId>SNAPMain</applicationId>
            <displayName>SENTINEL TOOLBOX</displayName>
            <frameIcon>/org/esa/snap/icons/snap.png</frameIcon>
            <image>/org/esa/snap/icons/snap.png</image>
            <excludedActions>

            </excludedActions>
            <excludedToolViews>

            </excludedToolViews>
        </applicationDescriptor>
    </extension>


    <extension point="snap-ui:layerSources">

    </extension>

    <extension point="snap-ui:layerEditors">

    </extension>

    <extension point="snap-ui:toolViews">


    </extension>

    <extension point="snap-ui:actions">



    </extension>

    <extension point="snap-ui:helpSets">
        <helpSet>
            <parent>snap-help</parent>
            <id>Help</id>
            <path>doc/help/dat.hs</path>
        </helpSet>
    </extension>

</module>
