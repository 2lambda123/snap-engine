<module>
    <manifestVersion>1.0.0</manifestVersion>
    <symbolicName>beam-chris-reader</symbolicName>
    <version>1.3-SNAPSHOT</version>
    <name>CHRIS/Proba Product Reader</name>


    <description>Enables BEAM to read CHRIS/PROBA HDF4 data products.</description>

    <vendor>Brockmann Consult GmbH</vendor>
    <contactAddress>Max Planck Str.2, 21502 Geesthacht (Germany)</contactAddress>
    <copyright>(C) 2007 by Brockmann Consult GmbH</copyright>
    <url>http://envisat.esa.int/beam</url>
    <licenseUrl>http://www.gnu.org/licenses/gpl.html</licenseUrl>

    <changelog>
        <![CDATA[
        <p>Version 1.3-SNAPSHOT
        <ul>
        <li>Corrected valid-pixel expression</li>
        </ul>
        </p>
        <p>Version 1.2
        <ul>
        <li>Corrected wrong subset reading</li>
        <li>Improved IO reliability</li>
        <li>Corrected wrong bitmask definitions</li>
        <li>Corrected wrong valid pixel expression</li>
        <li>Modified dropout correction</li>
        <li>Corrected wrong scaling of radiance values</li>
        </ul>
        </p>]]>
    </changelog>

    <dependency>
        <module>beam-core</module>
    </dependency>
    <dependency>
        <module>lib-hdf</module>
    </dependency>
    <dependency>
        <module>beam-visat</module>
        <optional>true</optional>
    </dependency>
    

    <categories>Reader,CHRIS</categories>

    <extension point="beam-visat:actions">
        <action>
            <class>org.esa.beam.visat.actions.ProductImportAction</class>
            <id>importChrisProduct</id>
            <helpId>importChrisProduct</helpId>
            <formatName>CHRIS_PROBA</formatName>
            <useAllFileFilter>true</useAllFileFilter>
            <mnemonic>M</mnemonic>
            <shortDescr>Import a CHRIS/Proba data product or product subset.</shortDescr>
            <description>Import a CHRIS/Proba data product or product subset.</description>
        </action>
    </extension>

    <extension point="beam-core:rgbProfiles">
        <rgbProfile>
            <name>CHRIS/Proba - 13,5,1</name>
            <red>radiance_13</red>
            <green>radiance_5</green>
            <blue>radiance_1</blue>
        </rgbProfile>
    </extension>

</module>
