<project
        xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <name>BEAM Installer Files</name>
    <groupId>org.esa.beam</groupId>
    <artifactId>beam-installer</artifactId>
    <version>4.6-SNAPSHOT</version>

    <packaging>jar</packaging>

    <repositories>
        <repository>
            <id>bc-public</id>
            <name>Public Maven Repository at Brockmann-Consult</name>
            <url>http://www.brockmann-consult.de/mvn/os</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>com.install4j</groupId>
            <artifactId>i4jruntime</artifactId>
            <version>4.2</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>


    <build>
        <plugins>
            <plugin>
                <groupId>com.bc.maven.plugins</groupId>
                <artifactId>maven-template-plugin</artifactId>
                <version>1.1</version>
                <executions>
                    <execution>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>template</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <templates>
                        <template>
                            <source>../src/main/bin/win/beam-cli-template.bat</source>
                            <lineEnding>dos</lineEnding>
                            <outputDirectory>../target/beam-bin.dir/bin</outputDirectory>
                            <outputFileNamePattern>@{filterBaseName}.@{sourceExtension}</outputFileNamePattern>
                            <filterSet>
                                <directory>../src/main/filters</directory>
                                <includes>
                                    <include>*.properties</include>
                                </includes>
                            </filterSet>
                        </template>
                        <template>
                            <source>../src/main/bin/linux/beam-cli-template.sh</source>
                            <lineEnding>unix</lineEnding>
                            <outputDirectory>../target/beam-bin.dir/bin</outputDirectory>
                            <outputFileNamePattern>@{filterBaseName}.@{sourceExtension}</outputFileNamePattern>
                            <filterSet>
                                <directory>../src/main/filters</directory>
                                <includes>
                                    <include>*.properties</include>
                                </includes>
                            </filterSet>
                        </template>
                        <template>
                            <source>../src/main/bin/macosx/beam-cli-template.command</source>
                            <lineEnding>unix</lineEnding>
                            <outputDirectory>../target/beam-bin.dir/bin</outputDirectory>
                            <outputFileNamePattern>@{filterBaseName}.@{sourceExtension}</outputFileNamePattern>
                            <filterSet>
                                <directory>../src/main/filters</directory>
                                <includes>
                                    <include>*.properties</include>
                                </includes>
                            </filterSet>
                        </template>
                    </templates>
                </configuration>
            </plugin>
        </plugins>
    </build>


</project>
